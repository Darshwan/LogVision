{
  "name": "logvision",
  "version": "0.1.0",
  "description": "Beautiful, structured, and developer-friendly logs",
  "type": "module",
  "bin": {
    "logvision": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test:formatter": "npm run build && node test-formatter.js",
    "test:logger": "npm run build && node test-logger.js",
    "test:interceptor": "npm run build && node test-interceptor.js",
    "test:cli": "npm run build && node test-cli.js",
    "test:all": "npm run test:formatter && npm run test:logger && npm run test:interceptor && npm run test:cli",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}